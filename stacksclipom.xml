<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.amido.stacks.workloads</groupId>
  <artifactId>stacks-web-api-cli</artifactId>
  <version>1.0.0</version>

  <properties>
    <maven.compiler.source>11</maven.compiler.source>
    <maven.compiler.target>11</maven.compiler.target>
    <main.basedir>.</main.basedir>
    <source.basedir>${main.basedir}/stacks</source.basedir>
    <build.basedir>${main.basedir}/build</build.basedir>
    <deploy.basedir>${main.basedir}/deploy</deploy.basedir>
    <output.basedir>${target.dir}</output.basedir>
    <project.dir>${temp.project.dir}</project.dir>
  </properties>

  <profiles>
    <profile>
      <id>copy-devops-resources</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-resources-plugin</artifactId>
            <version>2.6</version>
            <configuration>
              <encoding>UTF-8</encoding>
            </configuration>
            <executions>
              <execution>
                <id>copy-config-resources</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>copy-resources</goal>
                </goals>
                <configuration>
                  <outputDirectory>${output.basedir}</outputDirectory>
                  <resources>
                    <resource>
                      <directory>${main.basedir}/</directory>
                      <includes>
                        <include>yamllint.conf</include>
                      </includes>
                      <filtering>true</filtering>
                    </resource>
                  </resources>
                </configuration>
              </execution>
              <execution>
                <id>copy-build-resources</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>copy-resources</goal>
                </goals>
                <configuration>
                  <outputDirectory>${output.basedir}/build</outputDirectory>
                  <resources>
                    <resource>
                      <directory>${build.basedir}</directory>
                      <filtering>true</filtering>
                    </resource>
                  </resources>
                </configuration>
              </execution>
              <execution>
                <id>copy-deploy-resources</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>copy-resources</goal>
                </goals>
                <configuration>
                  <outputDirectory>${output.basedir}/deploy</outputDirectory>
                  <resources>
                    <resource>
                      <directory>${deploy.basedir}</directory>
                      <filtering>true</filtering>
                    </resource>
                  </resources>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>rename-source-folder</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.coderplus.maven.plugins</groupId>
            <artifactId>copy-rename-maven-plugin</artifactId>
            <version>1.0</version>
            <executions>
              <execution>
                <id>rename-file</id>
                <phase>generate-sources</phase>
                <goals>
                  <goal>rename</goal>
                </goals>
                <configuration>
                  <sourceFile>${output.basedir}/${project.dir}/</sourceFile>
                  <destinationFile>${output.basedir}/java/</destinationFile>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

  </profiles>

</project>